---
import SiteLayout from "../layouts/SiteLayout.astro";

// Prerender subscribe page as static
export const prerender = true;
---

<SiteLayout title="Subscribe â€” Age of Wonders">
  <div class="subscribe-content">
    <h1>Subscribe</h1>

    <p class="intro">
      Explore abundance, access, and the Age of Wonders.
    </p>

    <form
      action="https://buttondown.email/api/emails/embed-subscribe/ageofwonders"
      method="post"
      target="popupwindow"
      class="subscribe-form"
      id="subscribe-form"
      novalidate
    >
      <input
        type="email"
        name="email"
        id="bd-email"
        placeholder="your@email.com"
        required
        class="email-input"
      />
      <button type="submit" class="submit-btn">Subscribe</button>
    </form>
    <p class="error-message" id="error-message"></p>

  </div>

  <style>
    .subscribe-content {
      max-width: 480px;
    }

    .subscribe-content h1 {
      margin: 0 0 32px 0;
    }

    .intro {
      font-size: 23px;
      line-height: 1.7;
      margin: 0 0 32px 0;
    }

    .subscribe-form {
      display: flex;
      align-items: stretch;
      gap: 10px;
      flex-wrap: wrap;
    }

    .email-input {
      flex: 1;
      min-width: 260px;
      padding: 14px 20px;
      font-size: 17px;
      font-family: 'Cormorant Garamond', serif;
      border: 1px solid #e0e0e0;
      border-radius: 24px;
      background: #fafafa;
      transition: all 0.25s ease;
      color: var(--text);
    }

    .email-input:focus {
      outline: none;
      border-color: #ccc;
      background: white;
    }

    .email-input::placeholder {
      color: #bbb;
    }

    .submit-btn {
      padding: 14px 28px;
      font-size: 17px;
      font-family: 'Cormorant Garamond', serif;
      font-weight: 500;
      background: #f8f8f8;
      color: #666;
      border: 1px solid #e0e0e0;
      border-radius: 24px;
      cursor: pointer;
      transition: all 0.25s ease;
    }

    .submit-btn:hover {
      background: #eee;
      border-color: #ccc;
      color: #333;
    }

    .email-input.error {
      border-color: #d4a5a5;
      background: #fdfafa;
    }

    .email-input.error:focus {
      border-color: #c99;
    }

    .error-message {
      font-size: 15px;
      color: #b88;
      margin: 12px 0 0 0;
      padding-left: 20px;
      min-height: 20px;
      font-style: italic;
      transition: opacity 0.25s ease;
    }

    .error-message:empty {
      opacity: 0;
    }

    @media (max-width: 640px) {
      .intro {
        font-size: 21px;
        margin-bottom: 40px;
      }

      .subscribe-form {
        gap: 12px;
      }

      .email-input {
        min-width: 100%;
        padding: 14px 22px;
        font-size: 17px;
      }

      .submit-btn {
        width: 100%;
        padding: 14px 32px;
        font-size: 17px;
      }
    }
  </style>

  <script>
    const form = document.getElementById('subscribe-form');
    const input = document.getElementById('bd-email');
    const errorMsg = document.getElementById('error-message');

    function clearError() {
      input.classList.remove('error');
      errorMsg.textContent = '';
    }

    function showError(message) {
      input.classList.add('error');
      errorMsg.textContent = message;
    }

    form.addEventListener('submit', (e) => {
      const email = input.value.trim();

      if (!email) {
        e.preventDefault();
        showError('Please enter your email address.');
        input.focus();
        return;
      }

      if (!email.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/)) {
        e.preventDefault();
        showError('Please enter a valid email address.');
        input.focus();
        return;
      }

      // Valid - open popup and submit
      clearError();
      window.open('https://buttondown.email/ageofwonders', 'popupwindow');
    });

    input.addEventListener('input', clearError);
  </script>
</SiteLayout>
