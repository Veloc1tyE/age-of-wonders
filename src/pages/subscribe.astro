---
import SiteLayout from "../layouts/SiteLayout.astro";

// Prerender subscribe page as static
export const prerender = true;
---

<SiteLayout title="Subscribe â€” Age of Wonders">
  <h1 style="margin-top: 0; margin-bottom: 28px;">Subscribe</h1>

  <p style="font-size: 24px; line-height: 1.65; margin-bottom: 16px; max-width: 500px;">
    Explore abundance, access, and the Age of Wonders ahead from your inbox.
  </p>

  <p style="font-size: 16px; color: #999; font-style: italic; margin-bottom: 64px;">
    Low frequency. High quality. No distractions.
  </p>

  <form
    action="https://buttondown.email/api/emails/embed-subscribe/ageofwonders"
    method="post"
    target="popupwindow"
    onsubmit="window.open('https://buttondown.email/ageofwonders', 'popupwindow')"
    class="subscribe-form"
  >
    <div class="form-row">
      <input
        type="email"
        name="email"
        id="bd-email"
        placeholder="your@email.com"
        required
        class="email-input"
      />
      <button type="submit" class="submit-btn">
        Subscribe
      </button>
    </div>
  </form>

  <style>
    .subscribe-form {
      max-width: 520px;
      margin-bottom: 100px;
    }

    .form-row {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
    }

    .email-input {
      flex: 1;
      min-width: 260px;
      padding: 16px 24px;
      font-size: 18px;
      font-family: 'Cormorant Garamond', serif;
      border: 1px solid #e5e5e5;
      border-radius: 28px;
      background: #fafafa;
      transition: all 0.25s ease;
      color: var(--text);
    }

    .email-input:focus {
      outline: none;
      border-color: #d0d0d0;
      background: white;
    }

    .email-input::placeholder {
      color: #bbb;
    }

    .submit-btn {
      padding: 16px 36px;
      font-size: 18px;
      font-family: 'Cormorant Garamond', serif;
      font-weight: 500;
      background: #f8f8f8;
      color: #666;
      border: 1px solid #e5e5e5;
      border-radius: 28px;
      cursor: pointer;
      transition: all 0.25s ease;
    }

    .submit-btn:hover {
      background: #f0f0f0;
      border-color: #d5d5d5;
      color: #444;
    }

    @media (max-width: 640px) {
      .form-row {
        gap: 14px;
      }

      .email-input {
        min-width: 100%;
        padding: 14px 22px;
        font-size: 17px;
      }

      .submit-btn {
        width: 100%;
        padding: 14px 32px;
        font-size: 17px;
      }
    }
  </style>
</SiteLayout>
