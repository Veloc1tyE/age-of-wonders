---
import SiteLayout from "../layouts/SiteLayout.astro";

// Prerender subscribe page as static
export const prerender = true;
---

<SiteLayout title="Subscribe — Age of Wonders">
  <div class="subscribe-content">
    <h1>Subscribe</h1>

    <p class="intro">
      Explore abundance, access, and the Age of Wonders ahead — delivered to your inbox.
      <span class="aside">Low frequency, high quality.</span>
    </p>

    <form
      action="https://buttondown.email/api/emails/embed-subscribe/ageofwonders"
      method="post"
      target="popupwindow"
      onsubmit="window.open('https://buttondown.email/ageofwonders', 'popupwindow')"
      class="subscribe-form"
    >
      <input
        type="email"
        name="email"
        id="bd-email"
        placeholder="your@email.com"
        required
        class="email-input"
      />
      <button type="submit" class="submit-btn">Subscribe</button>
    </form>
  </div>

  <style>
    .subscribe-content {
      max-width: 480px;
    }

    .subscribe-content h1 {
      margin: 0 0 32px 0;
    }

    .intro {
      font-size: 23px;
      line-height: 1.7;
      margin: 0 0 48px 0;
    }

    .aside {
      color: #999;
      font-style: italic;
    }

    .subscribe-form {
      display: flex;
      gap: 14px;
      flex-wrap: wrap;
      margin-bottom: 120px;
    }

    .email-input {
      flex: 1;
      min-width: 240px;
      padding: 16px 24px;
      font-size: 18px;
      font-family: 'Cormorant Garamond', serif;
      border: 1px solid #e5e5e5;
      border-radius: 28px;
      background: #fafafa;
      transition: all 0.25s ease;
      color: var(--text);
    }

    .email-input:focus {
      outline: none;
      border-color: #d0d0d0;
      background: white;
    }

    .email-input::placeholder {
      color: #bbb;
    }

    .submit-btn {
      padding: 16px 36px;
      font-size: 18px;
      font-family: 'Cormorant Garamond', serif;
      font-weight: 500;
      background: #f8f8f8;
      color: #666;
      border: 1px solid #e5e5e5;
      border-radius: 28px;
      cursor: pointer;
      transition: all 0.25s ease;
    }

    .submit-btn:hover {
      background: #f0f0f0;
      border-color: #d5d5d5;
      color: #444;
    }

    @media (max-width: 640px) {
      .intro {
        font-size: 21px;
        margin-bottom: 40px;
      }

      .subscribe-form {
        gap: 12px;
      }

      .email-input {
        min-width: 100%;
        padding: 14px 22px;
        font-size: 17px;
      }

      .submit-btn {
        width: 100%;
        padding: 14px 32px;
        font-size: 17px;
      }
    }
  </style>
</SiteLayout>
