---
import SiteLayout from "../layouts/SiteLayout.astro";

// Prerender subscribe page as static
export const prerender = true;
---

<SiteLayout title="Subscribe â€” Age of Wonders">
  <h1 style="margin-top: 0; margin-bottom: 24px;">Subscribe</h1>

  <p style="font-size: 23px; line-height: 1.7; margin-bottom: 20px; max-width: 520px;">
    Explore abundance, access, and the Age of Wonders ahead from your inbox.
  </p>

  <p style="font-size: 16px; color: var(--muted); font-style: italic; margin-bottom: 56px;">
    Low frequency. High quality. No distractions.
  </p>

  <form
    action="https://buttondown.email/api/emails/embed-subscribe/ageofwonders"
    method="post"
    target="popupwindow"
    onsubmit="window.open('https://buttondown.email/ageofwonders', 'popupwindow')"
    class="subscribe-form"
  >
    <div style="display: flex; gap: 12px; flex-wrap: wrap;">
      <input
        type="email"
        name="email"
        id="bd-email"
        placeholder="your@email.com"
        required
        class="email-input"
      />
      <button type="submit" class="submit-btn">
        Subscribe
      </button>
    </div>
  </form>

  <style>
    .subscribe-form {
      max-width: 480px;
      margin-bottom: 80px;
    }

    .email-input {
      flex: 1;
      min-width: 240px;
      padding: 14px 20px;
      font-size: 17px;
      font-family: 'Cormorant Garamond', serif;
      border: 1px solid #e2e2e2;
      border-radius: 24px;
      background: #fafafa;
      transition: all 0.25s ease;
      color: var(--text);
    }

    .email-input:focus {
      outline: none;
      border-color: #ccc;
      background: white;
    }

    .email-input::placeholder {
      color: #aaa;
    }

    .submit-btn {
      padding: 14px 32px;
      font-size: 16px;
      font-family: 'Cormorant Garamond', serif;
      font-weight: 500;
      background: #f8f8f8;
      color: #666;
      border: 1px solid #e2e2e2;
      border-radius: 24px;
      cursor: pointer;
      transition: all 0.25s ease;
      letter-spacing: 0.3px;
    }

    .submit-btn:hover {
      background: #f0f0f0;
      border-color: #d5d5d5;
      color: #444;
    }
  </style>
</SiteLayout>
