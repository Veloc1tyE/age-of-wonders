---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { getEntry, getCollection } from "astro:content";
import fs from "fs";
import path from "path";

export async function getStaticPaths() {
  const { getCollection } = await import("astro:content");
  const essays = await getCollection("essays");
  return essays.map((entry) => ({
    params: { slug: entry.slug },
  }));
}

// Prerender essays as static pages for instant CDN delivery
export const prerender = true;

const { slug } = Astro.params;
const entry = await getEntry("essays", slug!);

if (!entry) return Astro.redirect("/essays");

const { Content } = await entry.render();

const ogImage = entry.data.ogImage || `https://ageofwonders.org/og-default.png`;
const publishedTime = entry.data.date.toISOString();
const canonicalURL = `https://ageofwonders.org/essays/${slug}/`;

// JSON-LD structured data for SEO
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": entry.data.title,
  "description": entry.data.description,
  "image": ogImage,
  "datePublished": publishedTime,
  "dateModified": publishedTime,
  "author": {
    "@type": "Organization",
    "name": "Age of Wonders"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Age of Wonders",
    "logo": {
      "@type": "ImageObject",
      "url": "https://ageofwonders.org/icon.svg"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL
  }
};

// Get all published essays sorted by date for prev/next navigation
const allEssays = (await getCollection("essays"))
  .filter(e => !e.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const currentIndex = allEssays.findIndex(e => e.slug === slug);
const previousEssay = currentIndex < allEssays.length - 1 ? allEssays[currentIndex + 1] : null;
const nextEssay = currentIndex > 0 ? allEssays[currentIndex - 1] : null;

// Read raw file content for editing (only in dev)
const filepath = `src/content/essays/${slug}.mdx`;
let rawContent = '';
if (!import.meta.env.PROD) {
  try {
    rawContent = fs.readFileSync(path.join(process.cwd(), filepath), 'utf-8');
  } catch (e) {
    console.error('Could not read file for edit mode:', e);
  }
}
---

<SiteLayout 
  title={`${entry.data.title} — Age of Wonders`} 
  description={entry.data.description}
  ogImage={ogImage}
  ogType="article"
  publishedTime={publishedTime}
>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(jsonLd)} />

  <h1 style="margin-top: 0; margin-bottom: 12px;">{entry.data.title}</h1>
  {entry.data.description && (
    <p style="font-style: italic; font-size: 21px; color: var(--muted); margin-bottom: 8px; line-height: 1.5;">
      {entry.data.description}
    </p>
  )}
  <p class="meta" style="margin-top: 12px; margin-bottom: 48px;">
    {entry.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
  </p>
  
  <Content />

  <!-- Subscribe CTA -->
  <div style="margin-top: 64px; padding: 28px 32px; background: linear-gradient(to right, rgba(245, 245, 245, 0.8), rgba(250, 250, 250, 0.3) 35%, transparent 60%); border-left: 2px solid #e0e0e0; border-radius: 3px;">
    <h3 style="margin: 0 0 12px 0; font-size: 24px; font-weight: 500; color: var(--text);">Explore More</h3>
    <p style="margin: 0 0 20px 0; font-size: 19px; line-height: 1.6; color: var(--muted);">
      Read new essays exploring abundance, access, and the Age of Wonders ahead.
    </p>
    <a
      href="/subscribe"
      class="subscribe-btn"
      style="display: inline-block; padding: 10px 24px; background: #f8f8f8; color: #666; text-decoration: none; border-radius: 20px; font-family: 'Cormorant Garamond', serif; font-size: 17px; letter-spacing: 0.2px; transition: all 0.25s ease; border: 1px solid #e2e2e2;"
    >
      Subscribe
    </a>
  </div>

  <!-- Essay Navigation -->
  <nav style="margin-top: 80px; padding-top: 32px; border-top: 1px solid var(--rule); display: flex; justify-content: space-between; align-items: center; gap: 32px;">
    <div style="flex: 1;">
      {previousEssay ? (
        <a href={`/essays/${previousEssay.slug}/`} style="text-decoration: none; display: block;">
          <span style="font-family: 'Inter', sans-serif; font-size: 14px; color: var(--muted); text-transform: uppercase; letter-spacing: 0.5px; display: block; margin-bottom: 8px;">← Previous</span>
          <span style="font-size: 20px; color: var(--text); font-weight: 500;">{previousEssay.data.title}</span>
        </a>
      ) : null}
    </div>
    <div style="flex: 1; text-align: right;">
      {nextEssay ? (
        <a href={`/essays/${nextEssay.slug}/`} style="text-decoration: none; display: block;">
          <span style="font-family: 'Inter', sans-serif; font-size: 14px; color: var(--muted); text-transform: uppercase; letter-spacing: 0.5px; display: block; margin-bottom: 8px;">Next →</span>
          <span style="font-size: 20px; color: var(--text); font-weight: 500;">{nextEssay.data.title}</span>
        </a>
      ) : null}
    </div>
  </nav>

  <!-- Edit Mode (localhost only) -->
  {!import.meta.env.PROD && rawContent && (
    <div id="edit-mode" class="edit-overlay" style="display: none;">
      <div class="edit-container">
        <div class="edit-header">
          <h3>Editing: {filepath}</h3>
          <div>
            <button id="save-btn" class="btn-primary">Save</button>
            <button id="close-btn" class="btn-secondary">Close</button>
          </div>
        </div>
        <textarea id="editor" data-filepath={filepath}>{rawContent}</textarea>
        <div class="edit-footer">
          <p>Changes saved to disk. Use <code>git add</code> and <code>git commit</code> to stage.</p>
        </div>
      </div>
    </div>
  )}
</SiteLayout>

<script>
  // Check for edit mode
  const params = new URLSearchParams(window.location.search);
  if (params.get('edit') === 'true') {
    showEditMode();
  }
  
  // Also listen for keyboard shortcut: Cmd+E or Ctrl+E
  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'e') {
      e.preventDefault();
      showEditMode();
    }
  });
  
  function showEditMode() {
    const overlay = document.getElementById('edit-mode');
    if (!overlay) return;
    
    overlay.style.display = 'flex';
    
    const editor = document.getElementById('editor') as HTMLTextAreaElement;
    const saveBtn = document.getElementById('save-btn');
    const closeBtn = document.getElementById('close-btn');
    
    // Focus editor
    editor?.focus();
    
    saveBtn?.addEventListener('click', async () => {
      const content = editor.value;
      const filepath = editor.dataset.filepath;
      
      saveBtn.textContent = 'Saving...';
      saveBtn.setAttribute('disabled', 'true');
      
      try {
        const res = await fetch('/api/save', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ filepath, content })
        });
        
        if (res.ok) {
          saveBtn.textContent = 'Saved ✓';
          setTimeout(() => {
            saveBtn.textContent = 'Save';
            saveBtn.removeAttribute('disabled');
          }, 2000);
        } else {
          const error = await res.json();
          alert(`Save failed: ${error.error}`);
          saveBtn.textContent = 'Save';
          saveBtn.removeAttribute('disabled');
        }
      } catch (error) {
        alert(`Save failed: ${error}`);
        saveBtn.textContent = 'Save';
        saveBtn.removeAttribute('disabled');
      }
    });
    
    closeBtn?.addEventListener('click', () => {
      overlay.style.display = 'none';
      // Remove ?edit=true from URL
      const url = new URL(window.location.href);
      url.searchParams.delete('edit');
      window.history.replaceState({}, '', url.pathname);
    });
    
    // ESC key to close
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay.style.display !== 'none') {
        overlay.style.display = 'none';
        const url = new URL(window.location.href);
        url.searchParams.delete('edit');
        window.history.replaceState({}, '', url.pathname);
      }
    });
  }
</script>

