---
interface Props {
  insight: string;
  context?: string;
}

const { insight, context } = Astro.props;
---

<div class="data-insight">
  <div class="insight">{insight}</div>
  {context && <div class="context">{context}</div>}
</div>

<style>
  .data-insight {
    margin: 40px 0;
    padding: 28px 0 28px 32px;
    border-left: 2px solid var(--accent);
    background: linear-gradient(to right, var(--accent-light), transparent);
  }
  
  .insight {
    font-family: "Cormorant Garamond", serif;
    font-size: 28px;
    font-weight: 400;
    line-height: 1.4;
    color: var(--text);
    margin-bottom: 8px;
  }
  
  .context {
    font-family: "Inter", sans-serif;
    font-size: 15px;
    color: var(--muted);
    line-height: 1.6;
    margin-top: 12px;
  }
  
  @media (max-width: 640px) {
    .data-insight {
      padding: 20px 0 20px 20px;
      margin: 32px 0;
    }
    
    .insight {
      font-size: 24px;
    }
    
    .context {
      font-size: 14px;
    }
  }
</style>
