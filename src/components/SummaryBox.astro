---
interface Props {
  title?: string;
}

const { title = "Summary" } = Astro.props;
---

<div class="summary-box">
  {title && <h4>{title}</h4>}
  <slot />
</div>

<style>
  .summary-box {
    margin: 48px 0;
    padding: 32px;
    background: var(--accent-warm-light);
    border-radius: 8px;
    border: 1px solid rgba(212, 160, 23, 0.2);
  }
  
  .summary-box h4 {
    margin: 0 0 16px 0;
    font-family: "Inter", sans-serif;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--accent-warm);
    font-weight: 600;
  }
  
  .summary-box :global(p) {
    margin: 12px 0;
    font-size: 20px;
  }
  
  .summary-box :global(p:first-of-type) {
    margin-top: 0;
  }
  
  .summary-box :global(p:last-child) {
    margin-bottom: 0;
  }
  
  @media (max-width: 640px) {
    .summary-box {
      padding: 24px;
      margin: 36px 0;
    }
    
    .summary-box h4 {
      font-size: 14px;
    }
    
    .summary-box :global(p) {
      font-size: 18px;
    }
  }
</style>
